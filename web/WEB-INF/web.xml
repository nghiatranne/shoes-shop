    <servlet-mapping>
        <servlet-name>UpdateSizeServlet</servlet-name>
        <url-pattern>/admin/sizes/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListSizeApi</servlet-name>
        <url-pattern>/api/sizes</url-pattern>
